{% extends 'base.html.twig' %}

{% block title %} Category {% endblock %}

{% block body %}
<div class=" container">
<h1> categories</h1><br><br>
{% include 'layouts/_flash_message.html.twig' %}
        <table class="table">
            <tr>
                <th>id</th>
                <th>nom de la categorie</th>
                <th>action</th>
            </tr>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_category_update', {'id': category.id}) }}">Modifier</a> |
                    <a onClick="return confirm('Voulez-vous vraiment supprimer cette catégorie')"  class="btn btn-danger" href="{{ path('app_category_delete', {'id': category.id}) }}" class="text-danger">Supprimer</a>
                    </td>
            </tr>
            {% else %}
            <p>Aucune categorie à afficher pour l'instant</p>
            {% endfor %}
        </table>
        <a class="btn btn-outline-primary" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>
    </div>
{% endblock %}
