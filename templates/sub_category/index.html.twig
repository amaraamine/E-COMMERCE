{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
    <div class="container">
    <div class="container"></div> <br><br>
    <h1>Sous categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.name }}</td>
                 <td>{ sub_category.category.name}</td>
                    <a  class="btn btn-outline-primary                    href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">show</a>
                    <a  onclick="return confirm('voulez-vous supprimer cette categorie ?) class="btn btn-danger href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_new') }}">Create new</a>
    </div>
    </div>
{% endblock %}
